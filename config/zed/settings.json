// documentation: https://zed.dev/docs/configuring-zed
{
  "project_panel": {
    "hide_root": false,
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager",
    "enabled_in_text_threads": false,
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "agent": {
    "enable_feedback": false,
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
  },
  "vim_mode": false,
  "outline_panel": {
    "dock": "right",
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware",
    "line_width": 1,
    "active_line_width": 1,
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "git": {
    "git_gutter": "tracked_files",
    "hunk_style": "unstaged_hollow",
    "inline_blame": {
      "enabled": true,
    },
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_value_hints": true,
  },
  "ui_font_size": 18,
  "ui_font_weight": 350,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "buffer_font_weight": 350,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "git_panel": {
    "status_style": "label_color",
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": true,
    "show_sign_in": true,
    "show_menus": false,
  },
  "theme": "Catppuccin Custom Mocha",
  "icon_theme": {
    "mode": "system",
    "dark": "Base Charmed Icons",
    "light": "Light Charmed Icons",
  },
  "minimap": {
    "show": "always",
    "display_in": "active_editor",
    "thumb": "always",
    "thumb_border": "full",
  },
  "terminal": {
    "dock": "right",
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all",
  },
  "collaboration_panel": {
    "button": false,
  },
}
